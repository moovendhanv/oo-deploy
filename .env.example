# Ouroboros Deployment Environment Configuration
# Copy this file to .env and fill in your API keys

# =============================================================================
# API Keys (REQUIRED)
# =============================================================================

# OpenAI API Key for GPT models
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# Anthropic API Key for Claude models
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-api-key-here

# LangChain API Key for tracing and monitoring
# Get your key from: https://smith.langchain.com/
LANGCHAIN_API_KEY=lsv2_pt_your-langchain-api-key-here

# =============================================================================
# MCP (Model Context Protocol) API Keys (OPTIONAL)
# =============================================================================

# Perplexity API Key for search functionality
# Get your key from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=pplx-your-perplexity-api-key-here

# Apify Token for web scraping and automation
# Get your token from: https://console.apify.com/account/integrations
APIFY_TOKEN=apify_api_your-apify-token-here

# =============================================================================
# Database Configuration (OPTIONAL)
# =============================================================================

# PostgreSQL password (defaults to 'ouroboros_secure' if not set)
POSTGRESQL_PASSWORD=ouroboros_secure

# =============================================================================
# Application Configuration (OPTIONAL)
# =============================================================================

# Node.js environment (production recommended for deployment)
NODE_ENV=production

# =============================================================================
# Workspace and Directory Configuration (OPTIONAL)
# =============================================================================

# Directory names for workspace organization
WORKING_DIRECTORY_NAME=Working_Directory
LONGTERM_DIRECTORY_NAME=Longterm_Directory

# Python recursion limit for complex operations
RECURSION_LIMIT=500

# =============================================================================
# Step Execution Configuration (OPTIONAL)
# =============================================================================

# Step execution timeout in seconds (default: 5400 = 1.5 hours)
STEP_EXECUTION_TIMEOUT=5400

# Number of retry attempts for failed steps
STEP_EXECUTION_RETRY_COUNT=3

# Maximum number of parallel step executions
STEP_EXECUTION_PARALLEL_LIMIT=5

# Monitoring intervals in seconds
WORKFLOW_MONITORING_INTERVAL=10
STEP_PROGRESS_UPDATE_INTERVAL=5

# Rollback mode for failed steps (true/false)
STEP_EXECUTION_ROLLBACK_MODE=false

# Enable legacy workflow execution mode (true/false)
LEGACY_WORKFLOW_EXECUTION_ENABLED=true

# =============================================================================
# PostgreSQL Advanced Configuration (OPTIONAL)
# =============================================================================

# Enable PostgreSQL data propagation (default: true)
POSTGRESQL_ENABLE_PROPAGATION=true

# Enable strategy tracking in PostgreSQL (default: true)
POSTGRESQL_ENABLE_STRATEGY_TRACKING=true

# Custom PostgreSQL connection (if not using the included PostgreSQL service)
# POSTGRESQL_HOST=your-postgresql-host
# POSTGRESQL_PORT=5432
# POSTGRESQL_DATABASE=ouroboros_workflows
# POSTGRESQL_USERNAME=ouroboros
